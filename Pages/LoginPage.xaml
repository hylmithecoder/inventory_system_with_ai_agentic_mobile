<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:InventorySystem.Controls"
             x:Class="InventorySystem.Pages.LoginPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <!-- Header -->
        <Frame BackgroundColor="Transparent"
                HasShadow="False"
                Padding="0"
                HorizontalOptions="Center">
                <Image Source="Images/avatar.png"
                    WidthRequest="120"
                    HeightRequest="120"
                    Aspect="AspectFill"
                    HorizontalOptions="Center">
                    <Image.Clip>
                        <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60" />
                    </Image.Clip>
                </Image>
            </Frame>
            
            <!-- Welcome Text -->
            <VerticalStackLayout Spacing="8" Margin="0,0,0,20">
                <Label Text="Selamat Datang Kembali!"
                       FontFamily="Misans"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       HorizontalTextAlignment="Center" />
                
                <Label Text="Masuk Ke Nurul Huda"
                       FontFamily="Misans"
                       FontSize="16"
                       TextColor="#7F8C8D"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

        <!-- Form -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="20"
                             Padding="30,0"
                             VerticalOptions="Center">

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Username"
                       FontSize="14"
                       TextColor="#666666"/>
                <Frame Padding="15,0"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       BackgroundColor="#F5F5F5">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Enter your username"
                           FontSize="16"
                           TextColor="#333333"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Password"
                       FontSize="14"
                       TextColor="#666666"/>
                <Frame Padding="15,0"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       BackgroundColor="#F5F5F5">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Enter your password"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#333333"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Remember Me & Forgot Password -->
            <Grid ColumnDefinitions="*,*">
                <HorizontalStackLayout Spacing="8">
                    <CheckBox x:Name="RememberMeCheckBox"
                        Color="Aqua"/>
                    <Label Text="Remember Me"
                            FontFamily="Misans"
                            FontSize="13"
                            TextColor="#00BFA5"
                            VerticalOptions="Center"/>
                </HorizontalStackLayout>

                <Label Grid.Column="1"
                       Text="Forgot Password?"
                       TextColor="#00BFA5"
                       HorizontalOptions="End"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                    Text="Login"
                    BackgroundColor="#00BFA5"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnLoginClicked"/>

            <!-- Register Button -->
            <Button x:Name="RegisterButton"
                Text="Register"
                BackgroundColor="White"
                TextColor="#00BFA5"
                BorderColor="#00BFA5"
                BorderWidth="1"
                CornerRadius="25"
                HeightRequest="50"
                FontSize="18"
                FontAttributes="Bold"
                Clicked="OnSignUpTapped"/>
        </VerticalStackLayout>

        <controls:SnackBar x:Name="SnackBar" Grid.Row="1"/>
    </Grid>
</ContentPage>
