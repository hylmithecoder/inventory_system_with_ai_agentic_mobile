<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:InventorySystem.Controls"
             x:Class="InventorySystem.Pages.MainPage"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <AbsoluteLayout x:Name="MainLayout">

        <!-- Main Content -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Header -->
                <Grid ColumnDefinitions="Auto, *, Auto">
                    <Button Grid.Column="0"
                            Text="â˜°"
                            Clicked="OnClickSideBar"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            TextColor="#333333"
                            FontSize="24"/>

                    <Label Grid.Column="1"
                           Text="Dashboard"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#333333"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Card Stats -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Total Items Card -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Items"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalItemsLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Stock Card -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Stock"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalStockLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Value Card -->
                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Value"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalValueLabel"
                                   Text="Rp 0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Inventory List -->
                <Border BackgroundColor="White" Padding="0"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>

                    <CollectionView x:Name="InventoryCollection"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10"
                                        BackgroundColor="#FAFAFA">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding name}"
                                               TextColor="#333333"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding ID}"
                                               TextColor="#999999"
                                               FontSize="12"/>

                                        <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                             HorizontalOptions="End"
                                                             VerticalOptions="Center"
                                                             Spacing="5">
                                            <Label Text="{Binding stock, StringFormat='Stock: {0}'}"
                                                   TextColor="#333333"
                                                   FontSize="14"/>
                                            <Label Text="{Binding price, StringFormat='Rp {0:N0}'}"
                                                   TextColor="#00BFA5"
                                                   FontSize="14"
                                                   FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Sidebar -->
        <Border x:Name="Sidebar"
                AbsoluteLayout.LayoutBounds="0,0,250,1"
                AbsoluteLayout.LayoutFlags="YProportional,HeightProportional"
                BackgroundColor="White"
                Padding="0"
                IsVisible="False">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="5,0"/>
            </Border.Shadow>

            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="Inventory"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       Margin="0,10,0,30"/>

                <Button Text="Dashboard"
                        BackgroundColor="#00BFA5"
                        TextColor="White"/>
                <Button Text="Analytics"
                        BackgroundColor="Transparent"
                        TextColor="#666666"/>
                <Button Text="Settings"
                        BackgroundColor="Transparent"
                        TextColor="#666666"/>

                <Button Text="Logout"
                        x:Name="LogoutButton"
                        BackgroundColor="Transparent"
                        TextColor="#E74C3C"
                        VerticalOptions="EndAndExpand"
                        Clicked="OnLogoutClicked"/>
            </VerticalStackLayout>
        </Border>

        <controls:SnackBar x:Name="SnackBar" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>
    </AbsoluteLayout>
</ContentPage>
