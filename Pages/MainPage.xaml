<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InventorySystem.Pages.MainPage"
             BackgroundColor="#F5F7FA"
             Shell.NavBarIsVisible="False">

    <Shell.TitleView>
        <Grid /> <!-- kosongkan title view -->
    </Shell.TitleView>

    <AbsoluteLayout x:Name="MainLayout">
        
        <!-- Main Content -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    Padding="30">
            <VerticalStackLayout Spacing="25">
            <Button Text="☰"  
                Clicked="OnClickSideBar"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="10"/>

                <!-- Header -->
                <Label Text="Inventory Overview" 
                       FontFamily="MiSans"
                       FontSize="28" 
                       FontAttributes="Bold"
                       TextColor="#2C3E50"/>

                <!-- Card Stats -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="20">
                    <!-- Total Items Card -->
                    <Border Grid.Column="0" 
                            BackgroundColor="White"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Items" 
                                   FontFamily="MiSans"
                                   TextColor="#95A5A6"
                                   FontSize="13"/>
                            <Label x:Name="TotalItemsLabel"
                                   FontFamily="MiSans"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#3498DB"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Stock Card -->
                    <Border Grid.Column="1" 
                            BackgroundColor="White"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Stock" 
                                   FontFamily="MiSans"
                                   TextColor="#95A5A6"
                                   FontSize="13"/>
                            <Label x:Name="TotalStockLabel"
                                   FontFamily="MiSans"
                                   Text="0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#2ECC71"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Value Card -->
                    <Border Grid.Column="2" 
                            BackgroundColor="White"
                            Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5"/>
                        </Border.Shadow>
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Total Value" 
                                   FontFamily="MiSans"
                                   TextColor="#95A5A6"
                                   FontSize="13"/>
                            <Label x:Name="TotalValueLabel"
                                   FontFamily="MiSans"
                                   Text="Rp 0" 
                                   FontSize="32" 
                                   FontAttributes="Bold"
                                   TextColor="#E74C3C"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Click Me Button -->
                <HorizontalStackLayout HorizontalOptions="End">
                    <Border BackgroundColor="#9B59B6" 
                            Padding="20,12"
                            x:Name="ClickMeButton">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Brush="#9B59B6" Opacity="0.3" Radius="10" Offset="0,5"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnClickMeTapped"/>
                        </Border.GestureRecognizers>
                        <Label Text="✨ Click Me" 
                               FontFamily="MiSans"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>
                </HorizontalStackLayout>

                <!-- Data Table -->
                <Border BackgroundColor="White" Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.08" Radius="15" Offset="0,5"/>
                    </Border.Shadow>

                    <VerticalStackLayout>
                        <!-- Table Header -->
                        <Grid Padding="20,15" 
                              BackgroundColor="#ECF0F1"
                              ColumnDefinitions="150,*,100,120,150">
                            <Label Grid.Column="0" 
                                   FontFamily="MiSans"
                                   Text="ID" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   FontSize="13"/>
                            <Label Grid.Column="1" 
                                   FontFamily="MiSans"
                                   Text="Name" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   FontSize="13"/>
                            <Label Grid.Column="2" 
                                   FontFamily="MiSans"
                                   Text="Stock" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   FontSize="13"/>
                            <Label Grid.Column="3" 
                                   FontFamily="MiSans"
                                   Text="Price" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   FontSize="13"/>
                            <Label Grid.Column="4" 
                                   FontFamily="MiSans"
                                   Text="Created By" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50"
                                   FontSize="13"/>
                        </Grid>

                        <BoxView HeightRequest="1" Color="#E0E0E0"/>

                        <!-- Table Body -->
                        <CollectionView x:Name="InventoryCollection"
                                        SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="20,15" 
                                          ColumnDefinitions="150,*,100,120,150">
                                        <Label Grid.Column="0" 
                                               FontFamily="MiSans"
                                               Text="{Binding ID}" 
                                               TextColor="#34495E"
                                               FontSize="13"
                                               LineBreakMode="TailTruncation"/>
                                        <Label Grid.Column="1" 
                                               FontFamily="MiSans"
                                               Text="{Binding name}" 
                                               TextColor="#2C3E50"
                                               FontSize="13"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="2" 
                                               FontFamily="MiSans"
                                               Text="{Binding stock}" 
                                               TextColor="#27AE60"
                                               FontSize="13"/>
                                        <Label Grid.Column="3" 
                                               FontFamily="MiSans"
                                               Text="{Binding price, StringFormat='Rp {0:N0}'}" 
                                               TextColor="#E74C3C"
                                               FontSize="13"/>
                                        <Label Grid.Column="4" 
                                               FontFamily="MiSans"
                                               Text="{Binding created_by}" 
                                               TextColor="#7F8C8D"
                                               FontSize="13"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Sidebar -->
        <Border x:Name="Sidebar"
                AbsoluteLayout.LayoutBounds="0,0,250,1"
                AbsoluteLayout.LayoutFlags="YProportional,HeightProportional"
                BackgroundColor="White"
                Padding="0"
                IsVisible="False">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,20,20,0"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="5,0"/>
            </Border.Shadow>

            <VerticalStackLayout Padding="20" Spacing="10">
                <Label Text="Inventory System" 
                       FontFamily="MiSans"
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#2C3E50"
                       Margin="0,10,0,30"/>

                <Border BackgroundColor="#3498DB" 
                        Padding="15,12"
                        Margin="0,5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="📦 Dashboard" 
                           FontFamily="MiSans"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"/>
                </Border>

                <Border BackgroundColor="Transparent" 
                        Padding="15,12"
                        Margin="0,5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="📊 Analytics" 
                           FontFamily="MiSans"
                           TextColor="#7F8C8D"
                           FontSize="14"/>
                </Border>

                <Border BackgroundColor="Transparent" 
                        Padding="15,12"
                        Margin="0,5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Label Text="⚙️ Settings" 
                           FontFamily="MiSans"
                           TextColor="#7F8C8D"
                           FontSize="14"/>
                </Border>
            </VerticalStackLayout>
        </Border>

        <!-- Popup Overlay -->
        <Grid x:Name="PopupOverlay" 
              AbsoluteLayout.LayoutBounds="0,0,1,1"
              AbsoluteLayout.LayoutFlags="All"
              BackgroundColor="#80000000"
              IsVisible="False">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnPopupOverlayTapped"/>
            </Grid.GestureRecognizers>

            <Border WidthRequest="400"
                    HeightRequest="250"
                    BackgroundColor="White"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.3" Radius="30" Offset="0,10"/>
                </Border.Shadow>

                <VerticalStackLayout Padding="30" 
                                     Spacing="20"
                                     VerticalOptions="Center">
                    <Label Text="✨" 
                           FontFamily="MiSans"
                           FontSize="48"
                           HorizontalOptions="Center"/>
                    <Label Text="Welcome to Inventory System" 
                           FontFamily="MiSans"
                           FontSize="20" 
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center"/>
                    <Label Text="Manage your inventory efficiently and effectively" 
                           FontFamily="MiSans"
                           FontSize="14"
                           TextColor="#7F8C8D"
                           HorizontalTextAlignment="Center"/>
                    
                    <Border BackgroundColor="#3498DB" 
                            Padding="40,12"
                            HorizontalOptions="Center"
                            Margin="0,10,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="25"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPopupCloseTapped"/>
                        </Border.GestureRecognizers>
                        <Label Text="Got it!" 
                           FontFamily="MiSans"
                               TextColor="White"
                               FontSize="14"
                               FontAttributes="Bold"/>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

    </AbsoluteLayout>
</ContentPage>