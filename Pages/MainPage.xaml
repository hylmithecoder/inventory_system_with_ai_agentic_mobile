<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:InventorySystem.Controls"
             x:Class="InventorySystem.Pages.MainPage"
             BackgroundColor="#F5F5F5"
             Shell.NavBarIsVisible="False">

    <AbsoluteLayout x:Name="MainLayout">
        
        <!-- Message Button (Fixed Position) -->
        <ContentView AbsoluteLayout.LayoutBounds="0.05,0.9,60,60"
                    AbsoluteLayout.LayoutFlags="PositionProportional">
            <Border BackgroundColor="#00BFA5"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#00BFA5" Opacity="0.4" Radius="10" Offset="0,5"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnMessageClicked"/>
                </Border.GestureRecognizers>
                <Label Text="ðŸ’¬"
                    FontSize="28"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
            </Border>
        </ContentView>        

        <!-- Main Content -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All"
                    Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Header -->
                <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">
                    <!-- Sidebar toggle -->
                    <Button Grid.Column="0"
                            Text="â˜°"
                            Clicked="OnClickSideBar"
                            BackgroundColor="Transparent"
                            TextColor="#333333"
                            FontSize="24"/>

                    <!-- Title -->
                    <Label Grid.Column="1"
                        Text="Inventory"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="#333333"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"/>

                    <!-- Search -->
                    <Entry Grid.Column="2"
                        x:Name="SearchEntry"
                        Placeholder="Cari barang..."
                        TextChanged="OnSearchTextChanged"
                        WidthRequest="150"
                        HorizontalOptions="End"/>

                    <!-- Add button -->
                    <Button Grid.Column="3"
                            Text="+"
                            Clicked="OnAddItemClicked"
                            BackgroundColor="#00BFA5"
                            TextColor="White"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"/>
                    
                    <!-- Refresh button -->
                    <!-- <Button Grid.Column="4"
                            Text="âŸ³"
                            Clicked="OnRefreshClicked"
                            BackgroundColor="#00BFA5"
                            TextColor="White"
                            FontSize="20"
                            WidthRequest="40"
                            HeightRequest="40"
                            CornerRadius="20"/> -->
                </Grid>

                <!-- Card Stats -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="15">
                    <!-- Total Items Card -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Items"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalItemsLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Stock Card -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Stock"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalStockLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Total Value Card -->
                    <Border Grid.Column="2"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <VerticalStackLayout Spacing="5">
                            <Label Text="Total Value"
                                   TextColor="#999999"
                                   FontSize="12"/>
                            <Label x:Name="TotalValueLabel"
                                   Text="Rp 0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#00BFA5"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- Inventory List -->
                <Border BackgroundColor="White" Padding="0"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>

                    <CollectionView x:Name="InventoryCollection"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="15" Margin="0,0,0,10"
                                        BackgroundColor="#FAFAFA">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnItemTapped"/>
                                    </Border.GestureRecognizers>
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="8"/>
                                    </Border.StrokeShape>
                                    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding name}"
                                               TextColor="#333333"
                                               FontSize="16"
                                               FontAttributes="Bold"/>
                                        <Label Grid.Row="1" Grid.Column="0"
                                               Text="{Binding ID}"
                                               TextColor="#999999"
                                               FontSize="12"/>

                                        <VerticalStackLayout Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                                             HorizontalOptions="End"
                                                             VerticalOptions="Center"
                                                             Spacing="5">
                                            <Label Text="{Binding stock, StringFormat='Stock: {0}'}"
                                                   TextColor="#333333"
                                                   FontSize="14"/>
                                            <Label Text="{Binding price, StringFormat='Rp {0:N0}'}"
                                                   TextColor="#00BFA5"
                                                   FontSize="14"
                                                   FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>
            </VerticalStackLayout>
            
        </ScrollView>

        <!-- Chatbot Overlay -->
        <BoxView x:Name="ChatbotOverlay"
                Color="Black"
                Opacity="0"
                IsVisible="False"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnChatbotOverlayTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Chatbot Sidebar -->
        <Border x:Name="ChatbotSidebar"
                AbsoluteLayout.LayoutBounds="1,0,300,1"
                AbsoluteLayout.LayoutFlags="YProportional,HeightProportional"
                BackgroundColor="White"
                Padding="0"
                IsVisible="False">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="-5,0"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,*,Auto" Padding="20">
                <!-- Header -->
                <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,15">
                    <Label Text="ðŸ’¬ Chat Support"
                        FontFamily="MiSans"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#2C3E50"/>
                    <Button Grid.Column="1"
                            Text="âœ•"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="#7F8C8D"
                            Clicked="OnChatbotCloseClicked"
                            Padding="5"/>
                </Grid>

                <!-- Chat Messages -->
                <CollectionView Grid.Row="1"
                            x:Name="ChatMessagesList"
                            SelectionMode="None"
                            ItemsSource="{Binding Messages}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Padding="0,5">
                                <Frame BackgroundColor="{Binding MessageBgColor}"
                                    CornerRadius="10"
                                    Padding="12,8"
                                    Margin="0,2"
                                    HasShadow="False">
                                    <Label Text="{Binding Content}"
                                        TextColor="{Binding MessageTextColor}"
                                        FontFamily="MiSans"
                                        FontSize="13"
                                        LineBreakMode="WordWrap"/>
                                </Frame>
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Input Area -->
                <Grid Grid.Row="2" ColumnDefinitions="*,Auto" ColumnSpacing="10" Margin="0,15,0,0">
                    <Entry x:Name="ChatInput"
                        Grid.Column="0"
                        Placeholder="Type message..."
                        FontFamily="MiSans"
                        BackgroundColor="#F5F5F5"/>
                    <Button Grid.Column="1"
                        Text="Send"
                        FontFamily="MiSans"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        Clicked="OnSendMessageClicked"
                        WidthRequest="60"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Modal Add Item -->
        <ContentView x:Name="AddItemModal"
                    IsVisible="False"
                    Opacity="0"
                    Scale="0.8"
                    BackgroundColor="#80000000"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <Frame BackgroundColor="White"
                Padding="20"
                CornerRadius="10"
                VerticalOptions="Center"
                HorizontalOptions="Center">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Tambah Barang" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="NameEntry" Placeholder="Nama barang"/>
                    <Entry x:Name="StockEntry" Placeholder="Stock" Keyboard="Numeric"/>
                    <Entry x:Name="PriceEntry" Placeholder="Harga" Keyboard="Numeric"/>
                    <Button Text="Simpan" Clicked="OnSaveItemClicked" BackgroundColor="#00BFA5" TextColor="White"/>
                    <Button Text="Batal" Clicked="OnCancelAddClicked" BackgroundColor="Transparent" TextColor="#E74C3C"/>
                </VerticalStackLayout>
            </Frame>
        </ContentView>

        <ContentView x:Name="ChoiceModal"
                    IsVisible="False"
                    Opacity="0"
                    Scale="0.8"
                    BackgroundColor="#80000000"
                    AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">

            <AbsoluteLayout>
                <Frame x:Name="ChoiceFrame"
                    BackgroundColor="White"
                    Padding="20"
                    CornerRadius="10"
                    AbsoluteLayout.LayoutBounds="0,0,AutoSize,AutoSize"
                    AbsoluteLayout.LayoutFlags="None">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Pilih Aksi" FontSize="18" FontAttributes="Bold"/>
                        <Button Text="Edit" Clicked="OnEditItemClicked" BackgroundColor="#00BFA5" TextColor="White"/>
                        <Button Text="Hapus" Clicked="OnDeleteItemClicked" BackgroundColor="#E74C3C" TextColor="White"/>
                        <Button Text="Batal" Clicked="OnCancelChoiceClicked" BackgroundColor="Transparent" TextColor="#E74C3C"/>
                    </VerticalStackLayout>
                </Frame>
            </AbsoluteLayout>
        </ContentView>

        <!-- Overlay -->
        <BoxView x:Name="Overlay"
                Color="Black"
                Opacity="0.3"
                IsVisible="False"
                AbsoluteLayout.LayoutBounds="0,0,1,1"
                AbsoluteLayout.LayoutFlags="All">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnOverlayTapped"/>
            </BoxView.GestureRecognizers>
        </BoxView>

        <!-- Sidebar -->
        <Border x:Name="Sidebar"
                AbsoluteLayout.LayoutBounds="0,0,250,1"
                AbsoluteLayout.LayoutFlags="YProportional,HeightProportional"
                BackgroundColor="White"
                Padding="0"
                IsVisible="False">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="5,0"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,*" Padding="20">
                <!-- Header dengan tombol close -->
                <Grid>
                    <Label Text="Inventory"
                        FontSize="20"
                        FontAttributes="Bold"
                        TextColor="#333333"
                        VerticalOptions="Center"
                        HorizontalOptions="Start"/>
                    <Button Text="âœ•"
                            Clicked="OnClickSideBar"
                            HorizontalOptions="End"
                            VerticalOptions="Center"
                            BackgroundColor="Transparent"
                            BorderColor="Transparent"
                            TextColor="#333333"
                            FontSize="20"/>
                </Grid>

                <!-- Menu -->
                <VerticalStackLayout Grid.Row="1" Spacing="10" Margin="0,20,0,0">
                    <Button Text="Dashboard" BackgroundColor="#00BFA5" TextColor="White"/>
                    <Button Text="Analytics" BackgroundColor="Transparent" TextColor="#666666"/>
                    <Button Text="Settings" BackgroundColor="Transparent" TextColor="#666666"/>
                    <Button Text="Logout"
                            x:Name="LogoutButton"
                            BackgroundColor="Transparent"
                            TextColor="#E74C3C"
                            VerticalOptions="EndAndExpand"
                            Clicked="OnLogoutClicked"/>
                </VerticalStackLayout>
            </Grid>
        </Border>


        <controls:SnackBar x:Name="SnackBar" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"/>
    </AbsoluteLayout>
</ContentPage>
