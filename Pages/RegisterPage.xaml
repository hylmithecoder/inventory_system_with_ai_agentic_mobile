<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:InventorySystem.Controls"
             x:Class="InventorySystem.Pages.RegisterPage"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto, *">

        <!-- Header -->
        <Label Grid.Row="0"
               Text="Register"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#333333"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Margin="0,40,0,20"/>

        <!-- Form -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="20"
                             Padding="30,0"
                             VerticalOptions="Center">

            <!-- Username -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Username"
                       FontSize="14"
                       TextColor="#666666"/>
                <Frame Padding="15,0"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       BackgroundColor="#F5F5F5">
                    <Entry x:Name="UsernameEntry"
                           Placeholder="Enter your username"
                           FontSize="16"
                           TextColor="#333333"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Email -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email"
                       FontSize="14"
                       TextColor="#666666"/>
                <Frame Padding="15,0"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       BackgroundColor="#F5F5F5">
                    <Entry x:Name="EmailEntry"
                           Placeholder="Enter your email"
                           FontSize="16"
                           Keyboard="Email"
                           TextColor="#333333"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Password -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Password"
                       FontSize="14"
                       TextColor="#666666"/>
                <Frame Padding="15,0"
                       CornerRadius="10"
                       BorderColor="#E0E0E0"
                       BackgroundColor="#F5F5F5">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Enter your password"
                           IsPassword="True"
                           FontSize="16"
                           TextColor="#333333"/>
                </Frame>
            </VerticalStackLayout>

            <!-- Register Button -->
            <Button x:Name="RegisterButton"
                    Text="Register"
                    BackgroundColor="#00BFA5"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="18"
                    FontAttributes="Bold"
                    Clicked="OnRegisterClicked"/>

            <!-- Login Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="Already have an account?"/>
                <Label Text="Login"
                       TextColor="#00BFA5"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginTapped"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <controls:SnackBar x:Name="SnackBar" Grid.Row="1"/>
    </Grid>
</ContentPage>
