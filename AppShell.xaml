<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="InventorySystem.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:InventorySystem"
    xmlns:pages="clr-namespace:InventorySystem.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="InventorySystem">

    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate pages:LoadingPage}"
        Route="LoadingPage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />

    <FlyoutItem Title="Main">
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

</Shell>
